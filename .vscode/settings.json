{
    // virtualenv 내 파이썬 경로
    "python.pythonPath": "d:\\tools\\python38\\py_envs\\surl_fastapi\\Scripts\\python.exe",
    
    // vurtalenv 경로
    "python.venvPath": "D:\\tools\\python38\\py_envs\\surl_fastapi",

    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    // which 나 where 를 이용해서 실제 pylint 경로를 찾는다. 
    "python.linting.pylintPath": "D:\\tools\\python38\\py_envs\\surl_fastapi\\Scripts\\pylint.exe",

    // 인텔리센스가 경로를 잘못 잡아서 unresolved-import 나오는 문제를 해결하기 위해
    // "python.jediEnabled":true,
    
    // python code lint 옵션
    // 해당 경로를 .vscode 폴더내 파일로 잡는다.
    
    "python.linting.pylintArgs": [
    "--rcfile",
    "${workspaceRoot}\\.vscode\\pylint.config"
    ],
    // vscode testing 옵션
    "python.testing.pytestArgs": [
    ".","-s"
    ],
    
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": {"when": "$(basename).py"}, 
        "**/__pycache__": true
    },
    "python.languageServer": "Jedi",
    // "python.languageServer": "Jedi",
    "python.autoComplete.extraPaths": [
        ".\\backend",
        ".\\backend\\config",
        
    ],
}